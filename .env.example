# Docker Compose Environment Variables
# Copy this to .env and fill in your values

# Database
POSTGRES_USER=recapvideo
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=recapvideo

# JWT
JWT_SECRET_KEY=your-super-secret-key-at-least-32-characters-long

# CORS
CORS_ORIGINS=https://studio.recapvideo.ai,https://recapvideo.ai

# Cloudflare R2
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=recapvideo
R2_PUBLIC_URL=https://videos.recapvideo.ai

# External APIs
TRANSCRIPT_API_KEY=your-transcript-api-key
GEMINI_API_KEY=your-gemini-api-key
RESEND_API_KEY=your-resend-api-key

# Frontend
API_URL=https://api.recapvideo.ai
WS_URL=wss://api.recapvideo.ai
